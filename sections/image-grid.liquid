<div class="page-width">
  <div class="grid-box">

    <div class="image-grid section-block">
      {%- assign imageGrid = section.settings -%}
      <div class="image-grid-left">
        <div class="image-grid-left-logo">
          <img src="{{imageGrid.logo | img_url: 'medium'}}" alt="logo">
        </div>

        <div class="image-grid-left-title">
          {{imageGrid.title}}
        </div>

        <div class="image-grid-left-body">
          {{imageGrid.body}}
        </div>
      </div>
      <div class="image-grid-right">
        <div class="image-grid-right-img">
          <img src="{{ imageGrid.img1 | img_url: 'medium' }}" alt="store">
        </div>
        <div class="image-grid-right-img">
          <img src="{{ imageGrid.img2 | img_url: 'medium' }}" alt="store">
        </div>
        <div class="image-grid-right-img">
          <img src="{{ imageGrid.img3 | img_url: 'medium' }}" alt="store">
        </div>
        <div class="image-grid-right-img">
          <img src="{{ imageGrid.img4 | img_url: 'medium' }}" alt="store">
        </div>
      </div> 
    </div>

    <div class="social-links">
      <div class="social-links--review-links">
        <ul>
          <li>
            <a href="https://search.google.com/local/writereview?placeid=ChIJl2ly3gGolVQRO0yJSu4kQY8" target="_blank">
              <img src="{{ imageGrid.google | img_url: 'large' }}" alt="google review">
            </a>
          </li>
          <li>
            <a href="https://www.tripadvisor.com/UserReviewEdit-g52024-d17378297-Comic_Cave_PDX-Portland_Oregon.html" target="_blank">
              <img src="{{ imageGrid.tripadviser | img_url: 'large' }}" alt="trip advisor">
            </a>
          </li>
          <li>
            <a href="https://www.ebay.com/usr/comic-cave-pdx" target="_blank">
              <img src="{{ imageGrid.ebay | img_url: 'large' }}" alt="trip advisor">
            </a>
          </li>
        </ul>
        
      </div>
      <ul class="social-links--social-icons">
        {%- comment -%}
        /////////////////////////// FACEBOOK \\\\\\\\\\\\\\\\\\\\\\\\\\\\
        {%- endcomment -%}
        <li>
          <a href="{{ settings.social_facebook_link | escape }}"
            title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Facebook' }}" target="_blank">
            {% include 'icon-facebook' %}
            <span class="icon__fallback-text">Facebook</span>
          </a>
        </li>

        {%- comment -%}
        /////////////////////////// TWITTER \\\\\\\\\\\\\\\\\\\\\\\\\\\\
        {%- endcomment -%}
        <li>
          <a href="{{ settings.social_twitter_link | escape }}"
            title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Twitter' }}" target="_blank">
            {% include 'icon-twitter' %}
            <span class="icon__fallback-text">Twitter</span>
        </li>

        {%- comment -%}
        /////////////////////////// INSTAGRAM \\\\\\\\\\\\\\\\\\\\\\\\\\\\
        {%- endcomment -%}
        <li>
          <a href="{{ settings.social_instagram_link | escape }}"
            title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'Instagram' }}" target="_blank">
            {% include 'icon-instagram' %}
            <span class="icon__fallback-text">Instagram</span>
          </a>
        </li>

        {%- comment -%}
        /////////////////////////// YOUTUBE \\\\\\\\\\\\\\\\\\\\\\\\\\\\
        {%- endcomment -%}
        <li>
          <a href="{{ settings.social_youtube_link | escape }}"
            title="{{ 'layout.footer.social_platform' | t: name: shop.name, platform: 'YouTube' }}" target="_blank">
            {% include 'icon-youtube' %}
            <span class="icon__fallback-text">YouTube</span>
          </a>
        </li>
        {%- comment -%}
        /////////////////////////// LinkedIn \\\\\\\\\\\\\\\\\\\\\\\\\\\\
        {%- endcomment -%}
          <li>
            <a href="https://www.linkedin.com/company/comic-cave-pdx/" title="Linkedin" target="_blank">
              {% include 'icon-linkedin' %}
              <span class="icon__fallback-text">Linkedin</span>
            </a>
          </li>

      </ul>

      </a>
    </div>
  </div>
</div>

{% schema %}
  {
  "name": "Image Grid",
  "settings" : [
    {
    "type": "image_picker",
    "id": "logo",
    "label": "Logo"
    },
    {
    "type": "text",
    "label": "Title",
    "id": "title"
    },
    {
    "type": "richtext",
    "label": "Body Copy",
    "id": "body"
    },
    {
    "type": "image_picker",
    "id": "img1",
    "label": "Top Left"
    },
    {
    "type": "image_picker",
    "id": "img2",
    "label": "Top Right"
    },
    {
    "type": "image_picker",
    "id": "img3",
    "label": "Bottom Left"
    },
    {
    "type": "image_picker",
    "id": "img4",
    "label": "Bottom Right"
    },
    {
    "type": "image_picker",
    "id": "google",
    "label": "Google Review Icon"
    },
    {
    "type": "image_picker",
    "id": "tripadviser",
    "label": "Trip Advisor Icon"
    },
    {
    "type": "image_picker",
    "id": "ebay",
    "label": "ebay Icon"
    }
  ],
  "presets": [
    {
      "category": "Comic Cave Content",
      "name": "Image Grid with Text"
    }
  ]
}
{% endschema %}